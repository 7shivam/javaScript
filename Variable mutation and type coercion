//Variable mutation
// mutation means combining two different data type in order to produce one single result belongs to a perticular data type.
var number=23;
var name = 'shivam';
console.log(number+''+name);

//Type coercion
//type corcian means the javaScript automatically converts one data type to another in order to produce result
/* Like we had already see in mutation that number is automatically converted into string in order to produce a result, that 
automatic conversion is know as type coercion
*/
var number=23;
var name = 'shivam';
console.log(number+''+name);

